<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:title="@string/pref_characteristics" android:key="pref_characteristics" android:defaultValue="true" />
    <SwitchPreference android:title="@string/pref_metainformation" android:key="pref_metainformation" android:summary="@string/pref_desc_metainformation" android:defaultValue="true" />
    <SwitchPreference android:title="@string/pref_preview" android:key="pref_preview" android:summary="@string/pref_desc_preview" android:defaultValue="false" />
    <SwitchPreference android:title="@string/pref_richeditor" android:key="pref_richeditor" android:summary="@string/pref_desc_richeditor" android:defaultValue="true" />
    <PreferenceCategory android:title="@string/pref_sorting_category" android:key="sorting_category">
        <ListPreference android:entries="@array/sorting_columns" android:title="@string/pref_column" android:key="pref_column" android:defaultValue="@string/text_summary" android:positiveButtonText="@null" android:negativeButtonText="@null" android:entryValues="@array/sorting_columns_values" />
        <ListPreference android:entries="@array/pref_direction_titles" android:title="@string/pref_direction" android:key="pref_direction" android:defaultValue="ASC" android:positiveButtonText="@null" android:negativeButtonText="@null" android:entryValues="@array/pref_direction_values" />
    </PreferenceCategory>
</PreferenceScreen>