<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5.0dip" />
            <stroke android:width="1.0dip" android:color="@color/color_ooni_blue" />
            <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5.0dip" />
            <stroke android:width="1.0dip" android:color="@color/color_ooni_blue" />
            <solid android:color="@color/color_ooni_blue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5.0dip" />
            <stroke android:width="1.0dip" android:color="@color/color_ooni_blue" />
            <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="-90.0" />
        </shape>
    </item>
</selector>